{
    "name": "nm-digitalhub/laravel-sumit-payment",
    "description": "SUMIT Payment Gateway for Laravel - Israeli payment processing with credit card clearing and invoicing",
    "type": "library",
    "keywords": [
        "laravel",
        "payment",
        "gateway",
        "sumit",
        "israel",
        "credit-card",
        "invoice",
        "billing"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "NM DigitalHub",
            "email": "info@nm-digitalhub.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/http": "^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "NmDigitalHub\\LaravelSumitPayment\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NmDigitalHub\\LaravelSumitPayment\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "NmDigitalHub\\LaravelSumitPayment\\SumitPaymentServiceProvider"
            ],
            "aliases": {
                "SumitPayment": "NmDigitalHub\\LaravelSumitPayment\\Facades\\SumitPayment"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
